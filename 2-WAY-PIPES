#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>

#define MAX 100

int main() {
    int filedes1[2];  // Parent → Child
    int filedes2[2];  // Child → Parent
    pid_t pid;
    char parent_msg[MAX], child_msg[MAX];
    char buffer[MAX];

    // Create both pipes
    if (pipe(filedes1) < 0 || pipe(filedes2) < 0) {
        perror("Pipe creation failed");
        exit(1);
    }

    // Fork
    pid = fork();

    if (pid < 0) {
        perror("Fork failed");
        exit(1);
    }

    if (pid > 0) {  
        // ----------------- Parent Process -----------------
        close(filedes1[0]); // Close read end of filedes1
        close(filedes2[1]); // Close write end of filedes2

        printf("Parent: Enter a message for child: ");
        scanf(" %[^\n]", parent_msg);  // ✅ allows spaces

        // Send to child
        write(filedes1[1], parent_msg, strlen(parent_msg) + 1);
        close(filedes1[1]);  // Close write end after sending

        // Read reply from child
        read(filedes2[0], buffer, MAX);
        printf("Parent: Received from child: %s\n", buffer);

        close(filedes2[0]);
    } 
    else {  
        // ----------------- Child Process -----------------
        close(filedes1[1]); // Close write end of filedes1
        close(filedes2[0]); // Close read end of filedes2

        // Read from parent
        read(filedes1[0], buffer, MAX);
        printf("Child: Received from parent: %s\n", buffer);

        printf("Child: Enter a reply for parent: ");
        scanf(" %[^\n]", child_msg);  // ✅ allows spaces

        // Send reply to parent
        write(filedes2[1], child_msg, strlen(child_msg) + 1);

        close(filedes1[0]);
        close(filedes2[1]);
    }

    return 0;
}