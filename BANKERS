#include <stdio.h>

int main()
{
    int n = 5; 
    int r = 3; 

    // Allocation Matrix
    int alloc[5][3] = {
        {0, 0, 1},
        {3, 0, 0},
        {1, 0, 1},
        {2, 3, 2},
        {0, 0, 3}};

    // Max Matrix
    int max[5][3] = {
        {7, 6, 3},
        {3, 2, 2},
        {8, 0, 2},
        {2, 1, 2},
        {5, 2, 3}};

    // Available Resources
    int avail[3] = {0, 0, 0};

    int f[n], ans[n], ind = 0;
    int need[n][r];

    for (int i = 0; i < n; i++)
        f[i] = 0;


    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < r; j++)
        {
            need[i][j] = max[i][j] - alloc[i][j];
        }
    }

    for (int k = 0; k < n; k++) 
    {
        for (int i = 0; i < n; i++)
        {
            if (f[i] == 0)
            {
                int flag = 0;
                for (int j = 0; j < r; j++)
                {
                    if (need[i][j] > avail[j])
                    {
                        flag = 1;
                        break;
                    }
                }

                if (flag == 0)
                {
                   
                    ans[ind++] = i;
                    for (int y = 0; y < r; y++)
                        avail[y] += alloc[i][y];

                    f[i] = 1;
                }
            }
        }
    }

    // Check if system is safe
    if (ind == n)
    {
        printf("System is in a SAFE state.\n");
        printf("The SAFE sequence is:\n");
        for (int i = 0; i < n - 1; i++)
            printf("P%d -> ", ans[i]);
        printf("P%d\n", ans[n - 1]);
    }
    else
    {
        printf("System is NOT in a SAFE sequence.\n");
        
    }

    return 0;
}
