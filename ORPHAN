#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/wait.h>

int main() {
    pid_t pid = fork();

    if (pid < 0) {
        
        perror("fork failed");
        exit(1);
    }

    if (pid > 0) {
         
        printf("Parent process: PID = %d \n Child PID = %d\n", getpid(), pid);
        
        exit(0);
    } else {
         
        sleep(5);

        printf("Child process: PID = %d\n", getpid());
        printf("Child's parent PID after parent exit = %d\n", getppid());

        exit(0);
    }
}
